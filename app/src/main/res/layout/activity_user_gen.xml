<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/action_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginStart="10dp"
                android:textColor="#E6000000"
                android:layout_weight="1.9"
                android:textSize="30sp"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_height="34dp"
                android:layout_width="wrap_content"
                android:layout_weight="0.1"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent" />
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:rowCount="3"
            android:columnOrderPreserved="false"
            android:padding="12dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:clickable="true"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_1"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_weight="1.7"
                        android:weightSum="3">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/grid_2"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/grid_1"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/grid_3"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="@string/game_mode1"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="Choose from the different patterns"
                        android:textSize="12sp"
                        android:textColor="#B3FFFFFF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="220dp">
                        <TextView
                            android:id="@+id/gamemode2text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="@string/game_mode2"
                            android:textColor="#E6000000"
                            android:textSize="16dp"
                            android:layout_marginLeft="05dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/gamemode2desctext"
                            android:layout_below="@+id/gamemode2text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The run will be Timed"
                            android:textSize="12dp"
                            android:layout_marginLeft="05dp"
                            android:textColor="#99000000"
                            app:layout_constraintTop_toBottomOf="@+id/gamemode2text"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/gamemode2ic"
                            android:layout_width="80dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/stopwatch"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toBottomOf="@+id/gamemode2desctext"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/besttimetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="38sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/uniformroundedextracondensedblack"
                            android:text="17:25"
                            android:layout_marginLeft="05dp"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="s"
                            android:textSize="14sp"
                            android:textColor="#99000000"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintLeft_toRightOf="@id/besttimetxt"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="220dp">
                        <TextView
                            android:id="@+id/gamemode3text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="Custom Patterns"
                            android:textColor="#E6000000"
                            android:textSize="16dp"
                            android:layout_marginLeft="05dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/gamemode3desctext"
                            android:layout_below="@+id/gamemode3text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Created Patterns"
                            android:textSize="12dp"
                            android:layout_marginLeft="05dp"
                            android:textColor="#99000000"
                            app:layout_constraintTop_toBottomOf="@+id/gamemode3text"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/gamemode3ic"
                            android:layout_width="80dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/user"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toBottomOf="@+id/gamemode3desctext"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/besttime2txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="38sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/uniformroundedextracondensedblack"
                            android:text="5"
                            android:layout_marginLeft="05dp"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="patterns"
                            android:textSize="14sp"
                            android:textColor="#99000000"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintLeft_toRightOf="@id/besttime2txt"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="220dp">
                        <TextView
                            android:id="@+id/leaderboardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="Leaderboard"
                            android:textColor="#E6000000"
                            android:textSize="16dp"
                            android:layout_marginLeft="05dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/leaderboarddesctext"
                            android:layout_below="@+id/leaderboardtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compete with Friends"
                            android:textSize="12dp"
                            android:layout_marginLeft="05dp"
                            android:textColor="#99000000"
                            app:layout_constraintTop_toBottomOf="@+id/leaderboardtext"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/leaderboardic"
                            android:layout_width="80dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/trophy"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toBottomOf="@+id/leaderboarddesctext"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/leaderboardpostxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="38sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/uniformroundedextracondensedblack"
                            android:text="1"
                            android:layout_marginLeft="05dp"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="st place"
                            android:textSize="14sp"
                            android:textColor="#99000000"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="4dp"
                            app:layout_constraintLeft_toRightOf="@id/leaderboardpostxt"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="220dp">
                        <TextView
                            android:id="@+id/wificonnectiontext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="Connection Status"
                            android:textColor="#E6000000"
                            android:textSize="16dp"
                            android:layout_marginLeft="05dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/wificonnectiondesctext"
                            android:layout_below="@+id/wificonnectiontext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap to Toggle"
                            android:textSize="12sp"
                            android:layout_marginLeft="05dp"
                            android:textColor="#99000000"
                            app:layout_constraintTop_toBottomOf="@+id/wificonnectiontext"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/wificonnectionic"
                            android:layout_width="80dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/wifi"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toBottomOf="@+id/wificonnectiondesctext"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/connectionstatustxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/uniformroundedextracondensedblack"
                            android:text="Connected"
                            android:layout_marginLeft="05dp"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>
                        t"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>